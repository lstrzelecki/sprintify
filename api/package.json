{
  "name": "sprintify-api",
  "version": "0.3.0",
  "scripts": {
    "build": "webpack",
    "build:watch": "webpack --watch",
    "serve": "node dist/index.js",
    "local": "npm-run-all --parallel build:watch serve",
    "embedded-elastic:start": "./start-embedded-elastic.sh",
    "embedded-elastic:stop": "./stop-embedded-elastic.sh",
    "demo:data": "node ./src/schema/demo-data.js",
    "test": "jest --runInBand",
    "test:watch": "jest --watch --runInBand"
  },
  "devDependencies": {
    "@types/elasticsearch": "^5.0.16",
    "@types/express": "^4.0.39",
    "@types/jest": "^20.0.8",
    "@types/lodash": "^4.14.74",
    "@types/rest": "^1.3.28",
    "@types/uuid": "^3.4.3",
    "jest": "^20.0.4",
    "npm-run-all": "^4.1.1",
    "ts-jest": "^20.0.14",
    "ts-loader": "^2.3.4",
    "typescript": "^2.5.2",
    "webpack": "^3.5.5",
    "webpack-node-externals": "^1.6.0"
  },
  "dependencies": {
    "elasticsearch": "^13.3.1",
    "express": "^4.16.2",
    "lodash": "^4.17.4",
    "moment": "^2.18.1",
    "rest": "^2.0.0",
    "uuid": "^3.1.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testResultsProcessor": "jest-junit",
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "testPathIgnorePatterns": [
      "<rootDir>/__tests__/utils/"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "modulePaths": [
      "<rootDir>/src"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/build",
      "<rootDir>/dist"
    ],
    "verbose": true
  },
  "jest-junit": {
    "suiteName": "Backend tests",
    "output": "./build/junit.xml"
  }
}
